# Moodlight v2 Environment Variables

# App Configuration
DEBUG=false
SECRET_KEY=your-super-secret-key-change-in-production

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/moodlight

# Twitter/X API
X_BEARER_TOKEN=your-x-bearer-token

# NewsAPI
NEWSAPI_KEY=your-newsapi-key

# Anthropic (Claude AI)
ANTHROPIC_API_KEY=your-anthropic-api-key

# AlphaVantage (Stock Data)
ALPHAVANTAGE_API_KEY=your-alphavantage-api-key

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email (Gmail SMTP)
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_RECIPIENT=recipient@example.com

# SMTP Configuration (for brief delivery)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=Moodlight <your-email@gmail.com>

# App URL (for email links)
APP_URL=https://moodlightintel.com

# Feature Flags (optional)
ENABLE_POLYMARKET=true
ENABLE_STOCK_DATA=true
